@model List<WebApp.ViewModels.StudentViewModel>

@{
    ViewBag.Title = "Students";
}
<div class="row">
    <a href="/student/create" class="btn btn-primary">Create</a>
</div>
<div class="row">

    @if (Model != null && Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Fullname</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <a href="/student/edit/@item.Id" class="btn btn-primary">Edit</a>
                            <a href="/student/delete/@item.Id" class="btn btn-danger">Delete</a>
                            <a href="/student/details/@item.Id" class="btn btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <span class="alert alert-danger">No Record found</span>
    }
</div>

@section Scripts{
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Theme/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('table').DataTable({});
        });
    </script>
    }